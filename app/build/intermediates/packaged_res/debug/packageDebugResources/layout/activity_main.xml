<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3772E7"
    android:padding="16dp"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/text_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        android:text="Playlist maker"
        android:textSize="25sp"
        android:textColor="@color/white"
        tools:Text="Playlist maker"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="328dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:backgroundTint="#ffffff"
        android:text="Поиск"
        android:textColor="#1A1B22"
        app:cornerRadius="20dp"
        app:icon="@drawable/search_lightmode"
        app:iconGravity="textStart"
        app:iconPadding="1dp"
        app:iconTint="#1A1B22"
        tools:ignore="HardcodedText,RtlHardcoded" />


        <Button
            android:id="@+id/button_media"
            android:layout_marginTop="16dp"
            android:layout_width="328dp"
            android:layout_height="220dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:backgroundTint="#ffffff"
            android:text="Медиатека"
            android:textColor="#1A1B22"
            app:icon="@drawable/media_lightmode"
            app:iconGravity="textStart"
            app:iconPadding="1dp"
            app:iconTint="#1A1B22"
            app:cornerRadius="20dp"
            tools:ignore="HardcodedText,RtlHardcoded"/>


        <Button
            android:id="@+id/button_settings"
            android:layout_marginTop="16dp"
            android:layout_width="328dp"
            android:layout_height="220dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:backgroundTint="#ffffff"
            android:text="Настройки"
            android:textColor="#1A1B22"
            app:icon="@drawable/settings_lightmode"
            app:iconGravity="textStart"
            app:iconPadding="1dp"
            app:iconTint="#1A1B22"
            app:cornerRadius="20dp"
            tools:ignore="HardcodedText,RtlHardcoded"/>
</LinearLayout>

